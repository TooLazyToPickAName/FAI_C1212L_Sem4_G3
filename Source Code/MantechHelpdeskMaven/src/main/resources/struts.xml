<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"></result-type>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"></result-type>
        </result-types>
        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"></interceptor>
        </interceptors>
        <default-action-ref name="login" />
        <action name="showComplaints" class="com.mantechhelpdesk.action.ShowComplaints">
            <result name="success">show_complaints.jsp</result>
        </action>
        <action name="login">
            <result>login.jsp</result>
        </action>
        <action name="index" class="com.mantechhelpdesk.action.ShowComplaints">
            <result name="success">login.jsp</result>
        </action>
        <action name="ajaxComplaintDetails" class="com.mantechhelpdesk.action.AjaxComplaintDetails">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!-- Create Complaint -->
        <action name="displayCreateComplaintForm" class="com.mantechhelpdesk.action.CreateComplaint" method="displayForm">
            <result name="success">create_complaint.jsp</result>
        </action>
        
        <action name="loginProcess" class="com.mantechhelpdesk.action.LoginAction">
            <result name="admin">admin_temp.jsp</result>
            <result name="technical">technical_temp.jsp</result>
            <result name="employee">employee_temp.jsp</result>
            <result name="error">error.jsp</result>
        </action>
        
        <action name="logout" class="com.mantechhelpdesk.action.LoginAction" method="logout">
            <result name="success">login.jsp</result>
        </action>   
        
        <action name="createComplaint" class="com.mantechhelpdesk.action.CreateComplaint" method="createComplaint">
            <result name="success" type="redirectAction">showComplaints</result>
            <result name="error"></result>
        </action>
        <!-- End Create Complaint -->
    </package>
</struts>
